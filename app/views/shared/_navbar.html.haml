%header.navbar.navbar-fixed-top.navbar-inverse
	.container
		=link_to 'Sample App', root_path, id: 'logo'
		%nav
			%ul.nav.navbar-nav.navbar-right
				%li= link_to 'About', about_path
				%li= link_to 'Contact', contact_path
				%li= link_to 'Help', help_path
				
				- if !current_user.nil?
					%li= link_to 'Profile', current_user
					%li= link_to 'Account Settings', edit_user_path(current_user)
					%li=link_to 'Cerrar Session', logout_path, method: :delete
				- else
					%li=link_to 'Iniciar Sesion', login_path
					%li=link_to 'Crear Cuenta', signup_path